<?xml version="1.0" encoding="UTF-8"?>
<?xml-model uri="http://xtriples.spatialhumanities.de/xtriples.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?><!-- Example 14: Using the $resource variable in statement patterns -->
<xtriples>
    <configuration>
        <vocabularies>
            <vocabulary prefix="gods" uri="http://xtriples.spatialhumanities.de/examples/gods/"/>
            <vocabulary prefix="rdf" uri="http://www.w3.org/1999/02/22-rdf-syntax-ns#"/>
            <vocabulary prefix="rdfs" uri="http://www.w3.org/2000/01/rdf-schema#"/>
            <vocabulary prefix="foaf" uri="http://xmlns.com/foaf/0.1/"/>
            <vocabulary prefix="rel" uri="http://purl.org/vocab/relationship/"/>
        </vocabularies>
        <triples>
            <statement>
                <subject prefix="gods">/@id</subject>
                <predicate prefix="rdfs">label</predicate>
                <object>/concat($currentResource//name/english, " (", $currentResource//name/roman, ")")</object>
            </statement>
        </triples>
    </configuration>
    <collection>
        <resource>
            <god id="13">
                <name>
                    <greek>Ποσειδῶν</greek>
                    <roman>Neptune</roman>
                    <english>Poseidon</english>
                </name>
                <gender>male</gender>
                <olympian>1</olympian>
                <relationships>
                    <relation type="brother" id="14"/>
                </relationships>
                <attributes>
                    <attribute>sea</attribute>
                    <attribute>rivers</attribute>
                    <attribute>floods</attribute>
                    <attribute>droughts</attribute>
                    <attribute>earthquakes</attribute>
                </attributes>
                <symbols>
                    <item>trident</item>
                </symbols>
                <animals>
                    <animal>horse</animal>
                    <animal>dolphin</animal>
                    <animal>fish</animal>
                    <animal>bull</animal>
                </animals>
            </god>
        </resource>
    </collection>
</xtriples>