<?xml-model uri="https://xtriples.lod.academy/xtriples.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<xtriples>
    <configuration>
        <vocabularies>
            <vocabulary prefix="gods" uri="https://xtriples.lod.academy/examples/gods/"/>
            <vocabulary prefix="rdf" uri="http://www.w3.org/1999/02/22-rdf-syntax-ns#"/>
            <vocabulary prefix="rdfs" uri="http://www.w3.org/2000/01/rdf-schema#"/>
            <vocabulary prefix="foaf" uri="http://xmlns.com/foaf/0.1/"/>
            <vocabulary prefix="rel" uri="http://purl.org/vocab/relationship/"/>
        </vocabularies>
        <triples>
            <statement n="1">
                <subject prefix="gods">/god/@id</subject>
                <predicate prefix="rdfs">seeAlso</predicate>
                <object type="uri" resource="{/concat('http://dbpedia.org/data/', $currentResource/god/name/english/text())}.rdf">//foaf:isPrimaryTopicOf/@rdf:resource</object>
            </statement>
            <statement n="2" debug="debug_me" repeat="{/count($currentResource//animal)}">
                <subject prefix="gods">/god/@id</subject>
                <predicate prefix="rdfs">seeAlso</predicate>
                <object type="uri" prepend="http://en.wikipedia.org/wiki/">//animal[$repeatIndex]</object>
            </statement>
            <statement n="3" repeat="{/count($currentResource//symbols/*)}">
                <subject prefix="gods">/god/@id</subject>
                <predicate prefix="rdfs">seeAlso</predicate>
                <object type="uri" debug="debug_me_even_more" prepend="http://en.wikipedia.org/wiki/">//symbols/*[$repeatIndex]</object>
            </statement>
        </triples>
    </configuration>
    <collection>
        <resource uri="https://xtriples.lod.academy/examples/gods/1.xml"/>
    </collection>
</xtriples>
